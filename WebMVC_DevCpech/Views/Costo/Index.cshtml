@model IEnumerable<WebMVC_DevCpech.ContextDB.CentroDeCostos>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

@foreach (var item in Model)
{
    <p>@item.codigo @item.descripcion <a href="@Url.Action("EditarCosto" , "costo" , new { codigo = item.codigo })">Ir a editar</a></p>
}